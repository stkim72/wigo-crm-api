<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ceragem.api.crm.dao.CrmFileBasDao">
    <sql id="sqlPkConditions">
                WHERE FILE_CD           =       #{fileCd}
                  AND FILE_ODRG         =       #{fileOdrg}
    </sql>
    <sql id="sqlCols">
                      FILE_CD                    /*파일코드        */
                    , FILE_ODRG                    /*파일순번        */
                    , FILE_NM                    /*파일명        */
                    , FILE_SIZE                    /*파일크기        */
                    , FILE_SAVE_NM                    /*파일저장명        */
                    , FILE_URL                    /*파일URL        */
                    , FILE_EXT_NM                    /*파일확장자명        */
                    , MIME_TYPE_NM                    /*MIME유형명        */
                    , REGR_ID                    /*등록자ID        */
                    , REG_DT                    /*등록일시        */
                    , AMDR_ID                    /*수정자ID        */
                    , AMD_DT                    /*수정일시        */
    </sql>
    <sql id="sqlSelectCols">
                      A.FILE_CD                    /*파일코드        */
                    , A.FILE_ODRG                    /*파일순번        */
                    , A.FILE_NM                    /*파일명        */
                    , A.FILE_SIZE                    /*파일크기        */
                    , A.FILE_SAVE_NM                    /*파일저장명        */
                    , A.FILE_URL                    /*파일URL        */
                    , A.FILE_EXT_NM                    /*파일확장자명        */
                    , A.MIME_TYPE_NM                    /*MIME유형명        */
                    , A.REGR_ID                    /*등록자ID        */
                    , TO_CHAR(A.REG_DT,'YYYYMMDDHH24MISS')    REG_DT                    /*등록일시        */
                    , A.AMDR_ID                    /*수정자ID        */
                    , TO_CHAR(A.AMD_DT,'YYYYMMDDHH24MISS')    AMD_DT                    /*수정일시        */
    </sql>
    <sql id="sqlConditions">
        <where>
            <if test="fileCd != null and fileCd != ''">
                <choose>
                    <when test="fileCd instanceof String">
                        AND A.FILE_CD         =       #{fileCd}
                    </when>
                    <otherwise>
                        AND A.FILE_CD         IN
                        <foreach item="item" index="index" collection="fileCd" open="(" separator="," close=")">
                            #{item}
                        </foreach>
                    </otherwise>
                </choose>
            </if>
            <if test="fileOdrg != null and fileOdrg != ''">
                      AND A.FILE_ODRG       =       #{fileOdrg}
            </if>
            <if test="fileNm != null and fileNm != ''">
                      AND A.FILE_NM         =       #{fileNm}
            </if>
            <if test="fileSize != null and fileSize != ''">
                      AND A.FILE_SIZE       =       #{fileSize}
            </if>
            <if test="fileSaveNm != null and fileSaveNm != ''">
                      AND A.FILE_SAVE_NM    =       #{fileSaveNm}
            </if>
            <if test="fileUrl != null and fileUrl != ''">
                      AND A.FILE_URL        =       #{fileUrl}
            </if>
            <if test="fileExtNm != null and fileExtNm != ''">
                      AND A.FILE_EXT_NM     =       #{fileExtNm}
            </if>
            <if test="mimeTypeNm != null and mimeTypeNm != ''">
                      AND A.MIME_TYPE_NM    =       #{mimeTypeNm}
            </if>
        </where>
    </sql>
    <select id="selectListCount" resultType="int">
                SELECT /* com.ceragem.api.crm.dao.CrmFileBasDao.selectListCount */ COUNT(1)
                 FROM CRM_FILE_BAS A
        <include refid="sqlConditions"/>
    </select>
    <select id="selectList" resultType="com.ceragem.api.crm.model.CrmFileVo">
        <include refid="com.ceragem.api.crm.dao.CrmCommonDao.pagingHeader"/>
               SELECT /* com.ceragem.api.crm.dao.CrmFileBasDao.selectList */ <include refid="sqlSelectCols"/>
                 FROM CRM_FILE_BAS A
        <include refid="sqlConditions"/>
               ORDER BY REG_DT DESC
        <include refid="com.ceragem.api.crm.dao.CrmCommonDao.pagingFooter"/>
    </select>
    <select id="select" resultType="com.ceragem.api.crm.model.CrmFileVo">
               SELECT /* com.ceragem.api.crm.dao.CrmFileBasDao.select */ <include refid="sqlSelectCols"/>
                 FROM CRM_FILE_BAS A
        <include refid="sqlPkConditions"/>
    </select>
    <insert id="insert">
                INSERT /* com.ceragem.api.crm.dao.CrmFileBasDao.insert */ INTO CRM_FILE_BAS (
        <include refid="sqlCols"/>
                 ) VALUES (
                       #{fileCd}
                     , #{fileOdrg}
                     , #{fileNm}
                     , #{fileSize}
                     , #{fileSaveNm}
                     , #{fileUrl}
                     , #{fileExtNm}
                     , #{mimeTypeNm}
                     , #{regrId}
                     , SYSDATE
                     , #{amdrId}
                     , SYSDATE
                 )
    </insert>
    <update id="update">
               UPDATE /* com.ceragem.api.crm.dao.CrmFileBasDao.update */ CRM_FILE_BAS
                  SET FILE_NM                                 =         #{fileNm}
                    , FILE_SIZE                               =         #{fileSize}
                    , FILE_SAVE_NM                            =         #{fileSaveNm}
                    , FILE_URL                                =         #{fileUrl}
                    , FILE_EXT_NM                             =         #{fileExtNm}
                    , MIME_TYPE_NM                            =         #{mimeTypeNm}
                    , AMDR_ID                                 =         #{amdrId}
                    , AMD_DT                                  =         SYSDATE
        <include refid="sqlPkConditions"/>
    </update>
    <delete id="delete">
               DELETE /* com.ceragem.api.crm.dao.CrmFileBasDao.delete */
                 FROM CRM_FILE_BAS
        <include refid="sqlPkConditions"/>
    </delete>
</mapper>
